{
  "name": "blvdiff-extension",
  "displayName": "BLVDIFF",
  "version": "0.0.1",
  "engines": { "vscode": "^1.70.0" },
  "activationEvents": [
    "onCommand:blvdiff.explain",
    "onCommand:blvdiff.diff"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      { "command": "blvdiff.explain", "title": "BLVDIFF: Explain error" },
      { "command": "blvdiff.diff", "title": "BLVDIFF: Show differential comparison" }
    ],
    "configuration": {
      "type": "object",
      "title": "BLVDIFF",
      "properties": {
        "blvflag.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to blvdiff binary (leave empty to use bundled binary or PATH)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 'no build step for JS'",
    "test": "echo 'no tests configured'"
  }
}
