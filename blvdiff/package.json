{
  "name": "blvdiff-extension",
  "displayName": "BLVDIFF",
  "description": "Designed to improve debugging processes for blind and low-vision (blv) developers",
  "version": "0.0.1",
  "publisher": "TODO PUT PUBLISHER NAME HERE DONT FORGET",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "AI",
    "Education"
  ],
  "icon": "blank.png",
  "activationEvents": [
    "onCommand:blvdiff.explain",
    "onCommand:blvdiff.diff",
    "onCommand:blvdiff.revert",
    "onCommand:blvdiff.setup",
    "onLanguage:python",
    "onLanguage:json",
    "onNotebook:jupyter-notebook"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blvdiff.explain",
        "title": "BLVDIFF: Explain error trace back"
      },
      {
        "command": "blvdiff.diff",
        "title": "BLVDIFF: Show differential comparison of scripts"
      },
      {
        "command": "blvdiff.revert",
        "title": "BLVDIFF: Revert script back to last saved version."
      },
      {
        "command": "blvdiff.setup",
        "title": "BLVDIFF: Configure API key for LLM."
      }
    ],
    "configuration": {
      "type": "object",
      "title": "BLVDIFF",
      "properties": {
        "blvflag.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Optional path to the compiled blvflag binary if not on system PATH."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 'no build step for JS'",
    "test": "echo 'no tests configured'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rylansedlacek/blvdiff_extension/tree/main"
  }
}
